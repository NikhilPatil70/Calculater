<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="700dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">


        <Button
            android:id="@+id/btnOne"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="1"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />


        <Button


            android:id="@+id/btnTwo"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:text="2"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="3"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnAllClear"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="20dp"
            android:text="AC"
            android:onClick="acEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">


        <Button
            android:id="@+id/btnFour"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:onClick="numberEvent"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:text="5"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:text="6"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="+"
            android:onClick="operatorEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:onClick="numberEvent"
            android:text="7"
            android:textSize="50dp"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnEight"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:text="8"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="9"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="20dp"
            android:text="-"
            android:onClick="operatorEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <Button
            android:id="@+id/btnDot"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="."
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnZero"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:text="0"
            android:onClick="numberEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="/"
            android:onClick="operatorEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="20dp"
            android:text="*"
            android:onClick="operatorEvent"
            android:textSize="50dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <Button
            android:id="@+id/btnParenthesisstarting"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="("
            android:onClick="numberEvent"
            android:textSize="40dp"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnParenthesisending"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="1dp"
            android:text=")"
            android:onClick="numberEvent"
            android:textSize="40dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:text="C"
            android:onClick="cEvent"
            android:textSize="40dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="20dp"
            android:text="="
            android:onClick="equalEvent"
            android:textSize="40dp"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>

